    <% if (msg.length !== 0) { %>
        <div class="alert alert-danger" role="alert">
          <h4><%= msg %> </h4>
        </div>
      <% } %>
     <!-- Main content -->
  <div class="container-fluid">
    
    <form method="post" enctype="multipart/form-data" action="/add">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Nama Barang</label>
          <input type="text" required    class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="nama_barang" >
        </div>
        <div class="mb-3">
            <select class="form-select" name="jenis" aria-label="Default select example">
                <option selected>Jenis</option>
                <option value="Barang">Barang</option>
                <option value="Makanan">Makanan</option>
                <option value="Makanan Cepat Saji">Makanan Cepat Saji</option>
                <option value="Minuman">Minuman</option>
                <option value="Minuman Sachet">Minuman Sachet</option>
                <option value="Lainnya">Lainnya</option>
              </select>
          </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Quantitas</label>
            <input type="number"required  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"  name="quantitas">
          </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Harga (Rp.)</label>
            <input type="number"required   class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" maxlength="9" name="harga">
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Deskripsi</label>
            <input type="text" required    class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="deskripsi" >
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Foto</label>
            <input type="file" required    name="asset" id=""  accept="image/png, image/jpeg">
          </div>
         
          
          
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
  </div>
